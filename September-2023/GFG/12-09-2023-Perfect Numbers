class Solution {

    isPerfectNumber(n){
        let sum= 0;
        let i=1
        while(i< n) {
            if(n%i === 0) {
                sum += i
            } 
            i++;
        }
        
        if(sum === n) {
            return 1
        }else{
            return 0;
        }
    }
}
