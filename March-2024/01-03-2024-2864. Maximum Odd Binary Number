/**
 * @param {string} s
 * @return {string}
 */
var maximumOddBinaryNumber = function(s) {
    const len = s.length;
    const str = s.split('');
    let pointer = len-1;

    while (pointer >= 0) {
        if (str[pointer] === "1") {
            [str[pointer] , str[len-1]] = [str[len-1], str[pointer]];
            break;
        }
        pointer--;
    }

    pointer = len-2;
    let forward = 0;

    while ( forward < pointer ) {
        if ( str[forward] === "1" ) 
            forward++; 
        else if (str[pointer] === "1") {
            [str[pointer] , str[forward]] = [str[forward], str[pointer]];
            pointer--;
            forward++;
        }
        else pointer--;
    }

    return str.join("");
};
